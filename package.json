{
    "name": "household-inventory",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "clean": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf dist node_modules/.cache",
        "reset:modules": "pnpm -r --parallel --include-workspace-root exec pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "reset": "pnpm clean && pnpm reset:modules"
    },
    "prettier": {
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/cdk": "20.1.5",
        "@angular/common": "^20.1.6",
        "@angular/compiler": "^20.1.6",
        "@angular/core": "^20.1.6",
        "@angular/fire": "^20.0.1",
        "@angular/forms": "^20.1.6",
        "@angular/material": "20.1.5",
        "@angular/platform-browser": "^20.1.6",
        "@angular/router": "^20.1.6",
        "@vicky-ui/tokens": "^2.0.0",
        "firebase": "^12.0.0",
        "rxjs": "~7.8.2",
        "tslib": "^2.8.1",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular/build": "^20.1.5",
        "@angular/cli": "^20.1.5",
        "@angular/compiler-cli": "^20.1.6",
        "@types/jasmine": "~5.1.8",
        "jasmine-core": "~5.9.0",
        "karma": "~6.4.4",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.1",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "typescript": "~5.8.3"
    }
}
